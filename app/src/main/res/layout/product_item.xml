<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="10dp"
        android:theme="@style/Theme.MaterialComponents"
        android:backgroundTint="@android:color/holo_orange_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_name"
                android:text="Product Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@android:color/white">
            </com.google.android.material.textview.MaterialTextView>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/white">
                <ImageView
                    android:id="@+id/product_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_gravity="center"
                    android:scaleType="centerInside">
                </ImageView>
            </FrameLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_short_description"
                android:text="Product Short Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@android:color/white">
            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_price"
                android:text="Product Price: ... TL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textColor="@android:color/white">
            </com.google.android.material.textview.MaterialTextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/show_more_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show more description"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/holo_orange_light">
                </com.google.android.material.button.MaterialButton>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/numberPicker"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:np_height="40dp"
                        app:np_max="10"
                        app:np_min="1"
                        app:np_dividerLength="20dp"
                        app:np_dividerDistance="26dp"
                        app:np_lineSpacingMultiplier="30"
                        app:np_textSize="14sp"
                        app:np_orientation="horizontal">

                    </com.shawnlin.numberpicker.NumberPicker>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_cart_button"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:icon="@drawable/ic_shopping_cart"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        android:gravity="center"
                        android:backgroundTint="@android:color/holo_orange_light">
                    </com.google.android.material.button.MaterialButton>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>